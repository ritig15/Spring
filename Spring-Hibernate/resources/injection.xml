<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        https://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">

	<bean
		class="com.xworkz.customer.repository.CustomerRepositoryImpl"
		id="customerRepositoryImpl" scope="singleton" />
	<bean
		class="com.xworkz.hotel_vendor.repository.HotelVendorRepositoryImpl"
		id="hotelVendorRepositoryImpl" scope="singleton"></bean>
	<bean
		class="com.xworkz.spring_hibernate.repository.FoodItemRepositoryImpl"
		id="foodItemRepositoryImpl" scope="singleton"></bean>
	<bean class="com.xworkz.customer.service.CustomerServiceImpl"
		id="customerServiceImpl" scope="singleton">
		<constructor-arg ref="customerRepositoryImpl"></constructor-arg>
	</bean>
	<bean
		class="com.xworkz.hotel_vendor.service.HotelVendorServiceImpl"
		id="HotelVendorServiceImpl" scope="singleton">
		<constructor-arg ref="hotelVendorRepositoryImpl"></constructor-arg>
	</bean>
	<bean
		class="com.xworkz.spring_hibernate.service.FoodItemServiceImpl"
		id="foodItemServiceImpl" scope="singleton">
		<constructor-arg ref="foodItemRepositoryImpl"></constructor-arg>
	</bean>

</beans>